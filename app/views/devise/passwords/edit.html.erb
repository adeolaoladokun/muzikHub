
<section class="slice bg-white">
  <div class="wp-section">
    <div class="container">
      <div class="row">
	    <div class="col-md-4 col-md-offset-4 well">
		  <h2 class="text-center">Change your password</h2>
		
		  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-light mt-20' }) do |f| %>
		    <%= f.error_notification %>
		
		    <%= f.input :reset_password_token, as: :hidden %>
		    <%= f.full_error :reset_password_token %>
		
			<%= f.input :password, required: true, autofocus: true, label: false, placeholder: 'Choose a new password', input_html: { class: "input-lg" } %>
			<%= f.input :password_confirmation, required: true, label: false, placeholder: 'Re-enter the new password', input_html: { class: "input-lg" } %>
		
		    <div class="form-actions">
			  <%= f.button :submit, "Change my password!", :class => 'btn-primary' %>
			  <br />
		      <%= render "devise/shared/links" %>
			  <br />
		    </div>
		  <% end %>
		
	    </div>
      </div>
    </div>
  </div>
</section>


